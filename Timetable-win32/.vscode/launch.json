{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "runtimeExecutable": "npm start",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "electron",
            "request": "launch",
            "name": "Launch Electron",
            "appDir": "/somwehere/",
            "sourceMaps": true
        },
        {
            "type": "electron",
            "request": "launch",
            "name": "Launch Electron against the workspace",
            "appDir": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: start",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}"
        }
    ]
}